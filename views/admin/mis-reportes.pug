extends ../layout/index

block contenido
    .py-10
        h2.text-center.text-2xl.font-extrabold= pagina
        p.text-xl.font-bold.text-center.my-10= mensaje

        div(class="max-w-screen-xl mx-auto")
            table(class="w-full text-sm text-left rtl:text-right text-gray-800 dark:text-gray-400")
                thead(class="text-xs text-black uppercase dark:text-gray-400")
                    tr
                        th(scope="col" class="px-6 py-3 bg-green-50 dark:bg-green-800") ID
                        th(scope="col" class="px-6 py-3 bg-green-50 dark:bg-green-800") Nombre 
                        th(scope="col" class="px-6 py-3 bg-green-50 dark:bg-green-800") Apellido 
                        th(scope="col" class="px-6 py-3 bg-green-50 dark:bg-green-800") Descripción 
                        th(scope="col" class="px-6 py-3 bg-green-50 dark:bg-green-800") Nivel de Ruido
                        th(scope="col" class="px-6 py-3 bg-green-50 dark:bg-green-800") Estado 
                        th(scope="col" class="px-6 py-3 bg-green-50 dark:bg-green-800") Dirección
                        th(scope="col" class="px-6 py-3 bg-green-50 dark:bg-green-800") Fecha
                        th(scope="col" class="px-6 py-3 bg-green-50 dark:bg-green-800") Acciones


                tbody
                    each reporte in reportes
                        tr(class="bg-green border-b dark:bg-green-800 dark:border-green-700 hover:bg-green-50 dark:hover:bg-green-600")
                            td(class="px-6 py-4 bg-green-300")= reporte.id 
                            td(class="px-6 py-4 bg-green-300")= reporte.nombreUsuario 
                            td(class="px-6 py-4 bg-green-300")= reporte.apellidoUsuario 
                            td(class="px-6 py-4 bg-green-300")= reporte.descripcion
                            td(class="px-6 py-4 bg-green-300")= reporte.nivelRuido
                            td(class="px-6 py-4 bg-green-300")= reporte.estado
                            td(class="px-6 py-4 bg-green-300")= reporte.calle
                            td(class="px-6 py-4 bg-green-300")= reporte.fechaFormateada
                            td(class="px-6 py-4 bg-green-300")
                                form(action=`/reportes/admin/detalle-reporte/${reporte.id}`, method="GET")
                                    input(type="hidden" name="_csrf" value=csrfToken)
                                    <button type="submit" class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">VER</button>
                                    <button type="submit" class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">EDITAR</button>

                