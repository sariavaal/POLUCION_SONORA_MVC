extends ../layout/index
block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Alerta
            span.font-normal Ruido
        h2.text-center.text-2xl.font-extrabold= pagina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-green-800.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-green-400.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-black-500.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email")
                    div 
                        label.block.text-sm.uppercase.text-black-500.mb-2.font-bold(for="password") Contraseña 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Contraseña" type="password" name="password")
                    div.flex.items-center.justify-between
                        a.text-gray-700.text-xs(href="/auth/registro") ¿No tienes cuenta? Registrate.
                        a.text-gray-700.text-xs(href="/auth/olvide-password") Olvidé mi contraseña
                    label.inline-flex.items-center.cursor-pointer
                    input( class="w-full bg-green-600 hover:bg-green-800 text-black font-bold py-3 cursor-pointer" type="submit" value= "Iniciar sesion")   