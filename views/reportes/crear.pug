extends ../layout/index
block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Alerta
      span.font-normal Ruido
    h2.text-center.text-2xl.font-extrabold= pagina
    .mt-8.mx-auto.max-w-lg 
      .bg-green-400.py-8.px-4.shadow
        
          // Descripción del reporte
          div
            label(for='descripcion', class='block text-sm font-bold text-black uppercase mt-2') Descripción del Reporte
            textarea.form-control.mt-1.w-full(rows='4', name='descripcion', placeholder='Descripción del reporte')

          // Nivel de Ruido
          div
            label(for='nivelRuido', class='block text-sm font-bold text-black uppercase mt-2') Nivel de Ruido
            select.form-select.mt-1.w-full(id='nivelRuido', name='nivelRuido')
              option(value='') - Seleccione -
              option(value='bajo') Bajo
              option(value='medio') Medio
              option(value='alto') Alto

          // Subir Imagen
          div
            label(for='imagen', class='block text-sm font-bold text-black uppercase mt-2') Subir Imagen
            input.form-input.mt-1.w-full(id='imagen', name='imagen', type='file')
          
          .border-gray-200.border-t.py-5.space-y-2.mt-2
            h3.text-lg.leading-6.font-bold.text-black.uppercase Ubicación
            p.text-gray-800 Ubica en el mapa la dirección donde tiene lugar el hecho a reportar
          #mapa.h-96.mt-4
          
          div
            p.calle
            input(type="hidden" name="calle" id="calle")
            input(type="hidden" name="lat" id="lat")
            input(type="hidden" name="lng" id="lng")
          div
            input(type="hidden" name="estado" value="pendiente" class="bg-blue-500 text-white p-2")
          div
            input(class="w-full bg-green-600 hover:bg-green-800 text-black font-bold py-3 cursor-pointer mt-4", type="submit", value="Enviar reporte")

        

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")

    script(src="/js/mapa.js")
                
